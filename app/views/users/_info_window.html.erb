
<div class="card-container" style="width: fit-content; height: auto; border: 2px solid black; margin: 8px; padding: 4px;" >
  <div class="container">
      <div class="map-card" style="background-color: white;">
          <div class="slide slide1">
              <div class="content">
                  <div class="icon">
                      <img src="<%= user.image %>" alt="" style="width: 100%; height: 200px; object-fit: contain;">
                  </div>
              </div>
          </div>
          <div class="slide slide2">
              <div class="content p-3">
                  <h3><%= user.user_name.upcase %></h3>
                  <p><%= user.operator_type %></p>
                  <p><%= user.location %></p>
                  <%= link_to "View Profile", user_path(user), class:"btn btn-light"%>
              </div>
          </div>
      </div>
  </div>
</div>
