<div class="index-page"><br><br><br>
  <div class="h1-container">
    <h1 style="border: 2px solid red; text-align: center; margin: 24px;">Find Some Bite-Mates</h1>
  </div>
  <div class="map-div" style="border: 2px solid yellowgreen; width: 100%; height: 60vh; display: flex; align-items: center; justify-content: center; margin: 16px 0px;" >
    <div style="width: 100%; height: 60vh;"
      data-controller="mapbox"
      data-mapbox-markers-value="<%= @markers.to_json %>"
      data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>

  <div class="cards-div" style="border: 2px solid blue; width: 80%; display: flex; flex-wrap: wrap; align-self: auto; justify-content: center; margin-bottom: 24px;">
    <% @users.each do |user| %>
      <div class="card-container" style="width: fit-content; height: auto; border: 2px solid black;" >
        <div class="container">
            <div class="card" style="background-color: transparent;">
                <div class="slide slide1">
                    <div class="content">
                        <div class="icon">
                            <img src="<%= user.image %>" alt="" style="width: 100%; height: 200px; object-fit: contain;">
                        </div>
                    </div>
                </div>
                <div class="slide slide2">
                    <div class="content">
                        <h3><%= user.user_name.upcase %></h3>
                        <p><%= user.operator_type %></p>
                        <%= link_to "View Profile", user_path(user), class:"btn btn-light", style:"margin: 20px;"%>
                    </div>
                </div>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

