<div class="index-page">
  <br><br><br>

  <header class="jumbotron jumbotron-fluid mb-5 rounded p-4" style=" width: 100%; display: flex; flex-wrap: wrap; align-self: auto; justify-content: center;">
    <div class="h1-container" style="text-align: center; margin: 18px;" >
        <h1>Connect with Bite-Mates in your area</h1>
        <p>Discover and connect with established and budding industry professionals to collaboriate with on your upcoming electronic music events.</p>
    </div>
  </header>

  <div class="container-fluid map-card-container border border-warning" style=" width: 100%; display: flex; margin-top: -40px; flex-wrap: wrap; align-self: auto; justify-content: center">
    <div class="row">
      <div class="col-6 left">
        <div class="cards-div" style="border: 2px solid blue; width: 100%; display: flex; flex-wrap: wrap; align-self: left; justify-content: center; margin-bottom: 24px;">
          <% @users.each do |user| %>
            <div class="card-container" style="width: fit-content; height: auto; padding: 12px;" >
              <div class="container">
                <div class="card" style="background-color: transparent;">
                    <div class="slide slide1">
                      <div class="content">
                          <div class="icon">
                              <img src="<%= user.image %>" alt="" style="width: 100%; height: 300px; object-fit: cover; border-radius: 15px;">
                          </div>
                      </div>
                    </div>
                    <div class="slide slide2" style="border-radius: 15px;">
                      <div class="content">
                          <h3><%= user.user_name.upcase %></h3>
                          <p><%= user.operator_type %></p>
                          <%= link_to "View Profile", user_path(user), class:"btn btn-light", style:"margin: 20px;"%>
                      </div>
                    </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

        <div class="col-6 right">
          <div class="map-div" style="border: 2px solid yellowgreen;">
            <div class="map-map" style="width: 100%; height: 80vh;">
              data-controller="mapbox"
              data-mapbox-markers-value="<%= @markers.to_json %>"
              data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
            </div>
          </div>
        </div>
    </div>
  </div>

