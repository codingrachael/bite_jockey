<div class="social_home">
  <div class="banner" style=" margin-top: 90px;">
      <div class="profile-avatar">
        <img class="avatar-large" alt="avatar-large" src=<%= @user.image %>/>

        <div class="banner-info" id="banner-info">
          <h2><%=@user.user_name %></h2>
          <p><%= @user.operator_type %></p>
          <p><%= @user.location %></p>
          <p><%= @user.pronoun %></p>
          <p><%= @user.social_link %></p>
        </div>
      </div>
  </div>

  <div class="container playlists-info">
    <div class="container" id="playlists" style="text-align: center;">
          <h3><%=@user.user_name %>'s Playlists</h3>
          <div class="cards" style=>
            <input type="radio" name="position"  />
            <input type="radio" name="position" />
            <input type="radio" name="position" checked/>
            <input type="radio" name="position" />
            <input type="radio" name="position" />
            <main id="carousel">
            <div class="item">
              <img class="card-img-top" src="https://media.istockphoto.com/photos/modern-futuristic-sci-fi-concept-club-background-grunge-concrete-picture-id1063881788?k=20&m=1063881788&s=170667a&w=0&h=lR3GsH1YtiJZUH0okJmq2iLJMFkJQH5XA37SSk5sJAA=" alt="Card image cap">
              <div class="container" id="c-item">
                <div class="card-body">
                  <h5 class="card-title">Dance Hits 2000s</h5>
                  <p class="card-text">The biggest dancefloor bangers of the 2000's</p>
                  <a href="#" class="btn btn-info">View Playlist</a>
                </div>
              </div>
            </div>
            <div class="item">
              <img class="card-img-top" src="https://images.unsplash.com/photo-1616855752765-2d867caa9aa7?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8MTJ8fHRlY2hub3xlbnwwfHwwfHw%3D&auto=format&fit=crop&w=600&q=60" alt="Card image cap">
              <div class="container" id="c-item">
                <div class="card-body">
                  <h5 class="card-title">Global Groove</h5>
                  <p class="card-text">Groovy sounds from around the world.</p>
                  <a href="#" class="btn btn-info">View Playlist</a>
                </div>
              </div>
            </div>
            <div class="item">
              <img class="card-img-top" src="https://images.unsplash.com/photo-1509114397022-ed747cca3f65?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=435&q=80" alt="Card image cap">
              <div class="container" id="c-item">
                <div class="card-body">
                  <h5 class="card-title">Rave Classics</h5>
                  <p class="card-text">Classic tunes that shaped and defined rave culture.</p>
                  <a href="#" class="btn btn-info">View Playlist</a>
                </div>
              </div>
            </div>
            <div class="item">
              <img class="card-img-top" src="https://images.unsplash.com/photo-1487260211189-670c54da558d?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=387&q=80" alt="Card image cap">
              <div class="container" id="c-item">
                <div class="card-body">
                  <h5 class="card-title">Poolside Disco</h5>
                  <p class="card-text">Disco, house, funk and soul for those warm summer days.</p>
                  <a href="#" class="btn btn-info">View Playlist</a>
                </div>
              </div>
            </div>
            <div class="item">
              <img class="card-img-top" src="https://images.unsplash.com/photo-1619983081593-e2ba5b543168?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=870&q=80" alt="Card image cap">
              <div class="container" id="c-item">
                <div class="card-body">
                  <h5 class="card-title">Warehouse Party</h5>
                  <p class="card-text">Classic party anthems from the club to your ears!</p>
                  <a href="#" class="btn btn-info">View Playlist</a>
                </div>
              </div>
            </div>
            </main>
          </div>
    </div>
  </div>
  <div class="container" id="calender" style="height: 100%;">
    <%= month_calendar(events: @bookings, attribute: :date) do |date, bookings| %>
     <%# single date  %>
      <%= date.day %>
      <% bookings.each do |booking| %>
        <div class="booking" style = "background: white"> 
          <p><%= booking.booker.user_name %></p>
           <p><%= booking.venue %></p>
           <p><%= booking.set_length%></p>
           <button type="button"> View Bookings</button>
        </div>
      <% end %>
    <% end %>

  <div class="container" id="social-feed" style="height: 100%;">
    <h3>Social Feed</h3>
    <div class="taggbox-container" style="width:100%;height:100%;overflow: auto;"><div class="taggbox-socialwall" data-wall-id="96344" view-url="https://widget.taggbox.com/96344"></div><script src="https://widget.taggbox.com/embed.min.js" type="text/javascript"></script></div>
  </div>
  <div class="container" id="map-container" style="height: 100%;">
    <h3>Info</h3>
      <div class="map-div" style="border: 2px solid yellowgreen;">
        <div class="map-map" style="width: 100%; height: 80vh;"
          data-controller="mapbox"
          data-mapbox-markers-value="<%= @markers.to_json %>"
          data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
        </div>
      </div>
      <div class="container" id="info-global" style="width: 30%; height: 100%; border: 5px solid white;">
        <div class="container" id="description">
          <h4>About <%=@user.user_name %></h4>
          <p><%= @user.description %></p>
        </div>
        <div class="container" id="genres">
          <h4><%= @user.operator_type %>'s Genres</h4>
          <p><%= @user.genres%></p>
        </div>
        <div class="container" id="contact links">
          <h4>Contact <%=@user.user_name %></h4>
          <ul>
            <li><%= @user.social_link %></li>
            <li><%= @user.email %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="container justify-content-center" id="booking-form" style="height: 100%;">
    <h3>Book <%=@user.user_name %></h3>
    <form>
        <div class="form-group">
          <label hidden for="exampleInputEmail1">Venue</label>
          <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Venue">
        </div>
        <br>
        <div class="form-group">
          <label hidden for="exampleInputPassword1">Date</label>
          <input type="date" class="form-control" placeholder="Date">
        </div>
        <br>
        <div class="form-group">
          <label hidden for="exampleInputPassword1">Date</label>
          <input type="time" class="form-control" placeholder="Time">
        </div>
        <br>
        <div class="form-group">
          <label hidden for="exampleInputEmail1">Hourly Rate</label>
          <input type="float" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Hourly Rate">
        </div>
        <br>
        <div class="form-group">
          <label hidden for="exampleInputEmail1">Music Type</label>
          <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Music Type">
        </div>
        <br>
        <div class="form-group">
          <label hidden for="exampleInputEmail1">Equipment</label>
          <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Equiptment">
        </div>
        <br>
        <button type="submit" class=" btn btn-outline-light btn-lg btn-block" style="text-center">Submit</button>
    </form>
  </div>

  <div class="edit/destroy">
    <ul>
      <li><%= link_to 'Edit', edit_user_path(@user) %></li>
      <li><%= button_to 'Destroy', user_path(@user), method: :delete, data: { confirm: 'Are you sure?' } %></li>
    </ul>
  </div>
</div>
