



<br><br><br><br><br>
<div class="container" style="border: 2px solid red;">
  <h1>Bookings</h1>
  <br><br>
  <% @bookings.each do |booking|%>
  <hr>
    <h3>Date:<%= booking.date %></h3>
    <hr><br>
    <p><strong>Performer:</strong><%= booking.user.user_name %></p>
    <p><strong>Venue:</strong><%= booking.venue %></p>
    <p><strong>Set Length:</strong><%= booking.set_length %></p>
    <p><strong>Hourly Rate:</strong><%= booking.hourly_rate %></p>
    <p><strong>Music Genres:</strong><%= booking.music_genre %></p>
    <p><strong>Equiptment Info:</strong><%= booking.venue %></p>
    <p><strong>Description:</strong><%= booking.description %></p>
    <p><strong>Booked By:</strong><%= booking.booker.user_name %></p>
    <%# <button type="button" class="btn btn-primary">Edit Booking</button>
    <button type="button" class="btn btn-primary">Delete Booking</button> %>

    <ul>
      <li><%= link_to 'Edit', edit_booking_path(booking) %></li>
      <li><%= button_to 'Destroy', booking_path(booking), method: :delete, data: { confirm: 'Are you sure?' } %></li>
    </ul>



  <% end %>
</div>
