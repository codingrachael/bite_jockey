<div class="social-index-container">

  <header class="jumbotron jumbotron-fluid mb-5 rounded p-4" style=" width: 100%; display: flex; flex-wrap: wrap; align-self: auto; justify-content: center;">
    <div class="h1-container" style="text-align: center; margin: 24px;">
        <h1>Connect with Bite-Mates in your area</h1>
    </div>
  </header>

  <div class="container border border-warning">
    <div class="row border border-success">
      <div class="col border border-primary">
      <% @users.each do |user| %>
            <div class="card-container" style="width: fit-content; height: auto; border: 2px solid black;" >
              <div class="container">
                <div class="card" style="background-color: transparent;">
                    <div class="slide slide1">
                      <div class="content">
                          <div class="icon">
                              <img src="<%= user.image %>" alt="" style="width: 100%; height: 200px; object-fit: contain;">
                          </div>
                      </div>
                    </div>
                    <div class="slide slide2">
                      <div class="content">
                          <h3><%= user.user_name.upcase %></h3>
                          <p><%= user.operator_type %></p>
                          <%= link_to "View Profile", user_path(user), class:"btn btn-light", style:"margin: 20px;"%>
                      </div>
                    </div>
                </div>
              </div>
            </div>
          <% end %>
      </div>
      <div class="col border border-danger">
      <% @users.each do |user| %>
            <div class="card-container" style="width: fit-content; height: auto; border: 2px solid black;" >
              <div class="container">
                <div class="card" style="background-color: transparent;">
                    <div class="slide slide1">
                      <div class="content">
                          <div class="icon">
                              <img src="<%= user.image %>" alt="" style="width: 100%; height: 200px; object-fit: contain;">
                          </div>
                      </div>
                    </div>
                    <div class="slide slide2">
                      <div class="content">
                          <h3><%= user.user_name.upcase %></h3>
                          <p><%= user.operator_type %></p>
                          <%= link_to "View Profile", user_path(user), class:"btn btn-light", style:"margin: 20px;"%>
                      </div>
                    </div>
                </div>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
