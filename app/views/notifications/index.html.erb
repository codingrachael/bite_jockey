<div class="test-page" style="border: 2px solid yellowgreen; background-color: black;">
  <h1 style="margin-top: 160px;">Notifications</h1>
  <div class="container" style="border: 2px solid hotpink; height: 70vh; margin: 34px 0px; display: flex; flex-direction: column; align-items: center; justify-content: center;">
    <% if current_user.unchecked_notifications.count == 0 %>
      <%# <h2>No New Notifications</h2> %>
      <div class="card-product" style="border: 6px solid white; display: flex; margin: 24px;">
        <img src=<%= current_user.image %> style="object-fit: contain; height: 250px; width: 450px;" />
        <div class="card-product-infos pt-22" style="border: 2px solid red; display: flex; flex-direction: column; align-items: center; justify-content: center; ">
          <h2 style="color: white;"><strong>1 x New Booking!</strong></h2> <br>
          <!--<h2><%= current_user.first_name %></h2>
          <p><%= current_user.description %></p>
          <p><%= current_user.operator_type %></p>-->
          <%= link_to "View Bookings", user_bookings_path(current_user), class:"btn btn-outline-light p-100" %> <br>
          <%= link_to "Search BiteMates", users_path, class:"btn btn-outline-light p-100" %>
        </div>
      </div>
      <div class="card-product" style="border: 6px solid white; display: flex; margin: 24px;">
        <img src=<%= current_user.image %> style="object-fit: contain; height: 250px; width: 450px;" />
        <div class="card-product-infos pt-22" style="border: 2px solid red; display: flex; flex-direction: column; align-items: center; justify-content: center; ">
          <h2 style="color: white;"><strong>1 x New Booking!</strong></h2> <br>
          <!--<h2><%= current_user.first_name %></h2>
          <p><%= current_user.description %></p>
          <p><%= current_user.operator_type %></p>-->
          <%= link_to "View Bookings", user_bookings_path(current_user), class:"btn btn-outline-light p-100" %> <br>
          <%= link_to "Search BiteMates", users_path, class:"btn btn-outline-light p-100" %>
        </div>
      </div>
    <% else current_user.unchecked_notifications.count > 0  %>
      <% @notifications.each do |notification| %>
        <div class="card-product" style="border: 6px solid white; display: flex; margin: 24px;">
        <img src=<%= notification.params[:booking].booker.image %> style="object-fit: contain; height: 250px; width: 450px;" />
        <div class="card-product-infos pt-22" style="border: 2px solid red; display: flex; flex-direction: column; align-items: center; justify-content: center; ">
          <h2 style="color: white;"><strong>1 x New Booking!</strong></h2> <br>
          <!--<h2><%= current_user.first_name %></h2>
          <p><%= current_user.description %></p>
          <p><%= current_user.operator_type %></p>-->
          <%= link_to "View Bookings", user_bookings_path(current_user), class:"btn btn-outline-light p-100" %> <br>
          <%= link_to "Search BiteMates", users_path, class:"btn btn-outline-light p-100" %>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
</div>
