<div class="playlist-display mt-5" p>
  <header>
    <h1> Organise Your Playlist's</h1>
    <p>Info Info Info Info</p>
  </header>

  <div class="playlist-container my-4 d-flex border-red">
    <div class="row w-100">
      <div class="col-md-12 d-flex flex-column justify-content-between align-items-center">
        <div class="container-fluid d-flex justify-content-center flex-wrap w-100">
          <% @playlists.each do |playlist| %>
            <div class="card card-img-top text-center mx-auto align-items-center bg-dark border-secondary mb-3" id="playlist-card" style="width: 12rem; height: 18rem;">
              <div class="playlist-image img-rounded">
                <%= image_tag playlist.images.first["url"], size: 150 %>
              </div>
              <div class="playlist-text">
                <h3><%=link_to playlist.name, playlist_tracks_path(playlist_id: playlist.id) %></h3>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
